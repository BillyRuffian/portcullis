.container
  .card.shadow-sm.mb-3
    .card-body
      %h1.card-title Search for a member 

      = form_with url: search_members_path, method: :get, data: {turbo_frame: 'members', turbo_action: 'advance', controller: 'automatic-form-submission'} do |f|
        = f.text_field :query, data: {action: 'input->automatic-form-submission#search'}, autocomplete: 'off', class: 'form-control form-control-lg', placeholder: 'Name'

  %turbo-frame#members
